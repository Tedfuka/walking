<div class="form_wrap">

<%= render partial: 'layouts/flash' %>

<%= form_for @tweet do |f| %>

<div class="input-field">
  <%= f.label :つぶやき %>
  <%= f.text_area :tweet %>
</div>

<div class="actions center">
  <%= f.submit "つぶやく"%>
</div>

<% end %>

<div class="left">
<% @tweets.order('created_at DESC').each do |tweet| %>
<p><span style="font-size: 120%">👣</span><%= tweet.tweet %><br><%= @users.find_by(id: tweet.user_id).username %> （<%= tweet.created_at.strftime("%m-%d %H:%M") %>）</p>
<% end %>
</div>

</div>
