<div class="wrap">

<% if user_signed_in? %>

<div>
<style>
  th:nth-child(1), td:nth-child(1) { padding: 5px; width: 50px; text-align: right;}
  th:nth-child(2), td:nth-child(2) { padding: 5px; width: 130px; text-align: center;}
  th:nth-child(3), td:nth-child(3) { padding: 5px; width: 30px; text-align: center;}
  th:nth-child(4), td:nth-child(4) { padding: 5px; width: 80px; text-align: right;}
  thead, tbody { display: block; }
  tbody { height: 600px; overflow-y: scroll; }
</style>
  <p class="center"><span style="font-size: 1.5em">🏃‍</span>みんなの歩数</p>
<table width="100%" border="1px" cellpadding="1px" style="border-collapse: collapse;">
  <thead>
    <!--<tr bgcolor="#81d4fa"><th class="center">順位</th><th class="center">名前</th><th class="center">歩数</th><th class="center">チーム</th></tr>-->
  </thead>
  <tbody>
    <% @users.each do |user, step| %>
    <tr><td><%= @j %>位</td><td><%= User.find(user).username %></td><td><%= User.find(user).team %></td><td><%= step.round().to_s(:delimited) %>歩</td></tr>
    <% @j+=1 %>
    <% end %>
  </tbody>
</table>
</div>

<% end %>

</div>
